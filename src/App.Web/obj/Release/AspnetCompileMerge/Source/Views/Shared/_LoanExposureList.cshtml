@model List<App.Web.Models.LoanExposureModel>

<table id="order-listing" class="table table-striped table-hover table-responsive table-borderless table-sm">
    <thead>
        <tr>
            <th> <strong>#</strong> </th>
            <th> <strong>Loan Account</strong> </th>
            <th> <strong>OP. Account</strong> </th>
            <th> <strong>Account Name</strong> </th>
            <th> <strong>Ref. Desc</strong> </th>
            <th> <strong>Principal</strong> </th>
            <th> <strong>Principal Repayment</strong> </th>
            <th> <strong>Interest Repayment</strong> </th>
            <th> <strong>Interest</strong> </th>
            <th> <strong>Date Approved</strong> </th>
            <th> <strong>Date Disbursed</strong> </th>
            <th> <strong>Outstanding Bal.</strong> </th>
            <th> <strong>Freq.</strong> </th>
            <th> <strong>Tenor</strong> </th>
            <th> <strong>Outstanding Tenor</strong> </th>
            <th> <strong>Loan Source</strong> </th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td> @(i + 1). </td>
                <td>@Html.DisplayFor(model => model[i].LoanAccount)</td>
                <td>@Html.DisplayFor(model => model[i].OperationalAccount)</td>
                <td>@Html.DisplayFor(model => model[i].AccountName) </td>
                <td>@Html.DisplayFor(model => model[i].ReferenceDescription)</td>
                <td>@Html.DisplayFor(model => model[i].Principal)</td>
                <td>@Html.DisplayFor(model => model[i].PrincipalRepayment)</td>
                <td>@Html.DisplayFor(model => model[i].InterestRepayment)</td>
                <td>@Html.DisplayFor(model => model[i].Interest)</td>
                <td>@Html.DisplayFor(model => model[i].DateApproved)</td>
                <td>@Html.DisplayFor(model => model[i].DateDisbursed)</td>
                <td>@Html.DisplayFor(model => model[i].OutstandingBalance)</td>
                <td>@Html.DisplayFor(model => model[i].Frequency)</td>
                <td>@Html.DisplayFor(model => model[i].Tenor)</td>
                <td>@Html.DisplayFor(model => model[i].OutstandingTenor)</td>
                <td>@Html.DisplayFor(model => model[i].LoanSource)</td>
            </tr>
        }
    </tbody>

</table>