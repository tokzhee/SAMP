@model List<App.Web.Models.CustomerAccountModel>

<table id="order-listing" class="table table-striped table-hover table-responsive table-borderless table-sm">
    <thead>
        <tr>
            <th> <strong>#</strong> </th>
            <th> <strong>Customer Id</strong> </th>
            <th> <strong>Account Number</strong> </th>
            <th> <strong>Account Name</strong> </th>
            <th> <strong>Account Type</strong> </th>
            <th> <strong>Is Credit Frozen</strong> </th>
            <th> <strong>Product Code</strong> </th>
            <th> <strong>Product</strong> </th>
            <th> <strong>Account Status</strong> </th>
            <th> <strong>Currency Code</strong> </th>
            <th> <strong>Branch Code</strong> </th>
            <th> <strong>Branch</strong> </th>
            <th> <strong>Book Balance</strong> </th>
            <th> <strong>Available Balance</strong> </th>
            <th> <strong>Lien Amount</strong> </th>
            <th> <strong>Uncleared Balance</strong> </th>
            <th> <strong>Is Account Active</strong> </th>
            <th> <strong>Is Card Account</strong> </th>
            <th> <strong>Mobile No</strong> </th>
            <th> <strong>Email</strong> </th>
            <th> <strong>RM ID</strong> </th>
            <th> &nbsp; </th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td> @(i + 1). </td>
                <td>@Html.DisplayFor(model => model[i].CustomerId)</td>
                <td>@Html.DisplayFor(model => model[i].AccountNumber)</td>
                <td>@Html.DisplayFor(model => model[i].AccountName) </td>
                <td>@Html.DisplayFor(model => model[i].AccountType)</td>
                <td>

                    @if (Model[i].IsCreditFrozen)
                    {
                        <span class="badge badge-danger">
                            Y
                        </span>
                    }
                    else
                    {
                        <span class="badge badge-success">
                            N
                        </span>
                    }

                </td>
                <td>@Html.DisplayFor(model => model[i].ProductCode)</td>
                <td>@Html.DisplayFor(model => model[i].Product) </td>
                <td>@Html.DisplayFor(model => model[i].AccountStatus)</td>
                <td>@Html.DisplayFor(model => model[i].CurrencyCode) </td>
                <td>@Html.DisplayFor(model => model[i].BranchCode)</td>
                <td>@Html.DisplayFor(model => model[i].Branch) </td>
                <td>@Html.DisplayFor(model => model[i].BookBalance)</td>
                <td>@Html.DisplayFor(model => model[i].AvailableBalance) </td>
                <td>@Html.DisplayFor(model => model[i].LienAmount)</td>
                <td>@Html.DisplayFor(model => model[i].UnclearedBalance) </td>
                <td>
                    @if (Model[i].IsAccountActive)
                    {
                        <span class="badge badge-success">
                            Y
                        </span>
                    }
                    else
                    {
                        <span class="badge badge-danger">
                            N
                        </span>
                    }

                </td>
                <td>
                    @if (Model[i].IsCardAccount)
                    {
                        <span class="badge badge-success">
                            Y
                        </span>
                    }
                    else
                    {
                        <span class="badge badge-info">
                            N
                        </span>
                    }
                </td>
                <td>@Html.DisplayFor(model => model[i].MobileNo)</td>
                <td>@Html.DisplayFor(model => model[i].Email) </td>
                <td>@Html.DisplayFor(model => model[i].RelationshipManagerId) </td>
                <td>&nbsp;</td>
            </tr>
        }
    </tbody>

</table>
