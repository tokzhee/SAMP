@model App.Web.ViewModels.ViewRoleAccessViewModel

@{
    ViewBag.Title = "View Role Access";
}

<div class="row mb-4">
    <div class="col-12 d-flex align-items-center justify-content-between">
        <h5 class="page-title">View Role Access</h5>
    </div>
</div>
<div class="row">
    <div class="col-md-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @if (TempData["Alert"] != null)
                {
                    @Html.Partial("_Alert", TempData["Alert"])
                }

                <form class="forms-sample" action="@Url.Action("ViewRoleAccess")" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="">
                            Role
                        </label>
                        @Html.DropDownListFor(model => model.RoleId, Model.RoleSelectListItems, Model.RoleId, new { @class = "form-control input-sm" })
                    </div>

                    <button type="submit" class="btn btn-primary btn-xs mr-2">
                        <i class="mdi mdi-file-document"></i>
                        View
                    </button>
                </form>
                <br />
                @if (Model.AssignRoleAccessViewModel != null)
                {
                    @Html.Partial("_RoleAccessList", Model.AssignRoleAccessViewModel)
                }
            </div>
        </div>
    </div>

</div>

<script type="text/javascript">
    @* Select All Checkboxes *@
    function CheckUncheckCheckbox(isChecked) {
        if (isChecked) {
            $(".form-check-input").each(function () {
                this.checked = true;
            });
        } else {
            $(".form-check-input").each(function () {
                this.checked = false;
            });
        }
    }
</script>