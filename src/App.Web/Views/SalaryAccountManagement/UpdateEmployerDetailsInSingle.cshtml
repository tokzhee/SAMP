@model App.Web.ViewModels.UpdateEmployerDetailsInSingleViewModel

@{
    ViewBag.Title = "Update Employer Details (Single)";
}

<div class="row mb-4">
    <div class="col-12 d-flex align-items-center justify-content-between">
        <h5 class="page-title">
            Update Employer Details (Single)
        </h5>
    </div>
</div>

<div class="row">
    <div class="col-md-9 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                @if (TempData["Alert"] != null)
                {
                    @Html.Partial("_Alert", TempData["Alert"])
                }

                <form class="forms-sample" action="@Url.Action("UpdateEmployerDetailsInSingle")" method="post">
                    @Html.AntiForgeryToken()

                    <div class="form-group">
                        <label for="">
                            Account Number
                        </label>
                        @if (Model.AccountNumberDisabled)
                        {
                            @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control input-sm", placeholder = "Type account number here . . .", disabled = "disabled" })
                        }
                        else
                        {
                            @Html.TextBoxFor(model => model.AccountNumber, new { @class = "form-control input-sm", placeholder = "Type account number here . . ." })
                        }
                    </div>

                    <div class="form-group">
                        <label for="">
                            Employer Name
                        </label>
                        @Html.TextAreaFor(model => model.EmployerName, new { @class = "form-control input-sm", placeholder = "Type employer name here . . ." })
                    </div>

                    <button type="submit" class="btn btn-primary btn-xs mr-2">
                        <i class="mdi mdi-file-document"></i>
                        Save
                    </button>

                </form>
            </div>
        </div>
    </div>
</div>


@section CustomScripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $('#AccountNumber').on('keyup', function () {
                var accountNumber = $(this).val();
                if (accountNumber.length >= 10) {
                    getAccountName(accountNumber);
                }
            })
        });
    </script>
}

