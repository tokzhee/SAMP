@model App.Web.ViewModels.ProfileIdentifiedSalaryAccountViewModel

@{
    ViewBag.Title = "Profile Identified Salary Account";
}

<div class="row mb-4">
    <div class="col-12 d-flex align-items-center justify-content-between">
        <h5 class="page-title">
            Profile Identified Salary Account
        </h5>
    </div>
</div>

<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">

                @if (TempData["Alert"] != null)
                {
                    @Html.Partial("_Alert", TempData["Alert"])
                }

                <form class="forms-sample" action="@Url.Action("ProfileIdentifiedSalaryAccount")" method="post" enctype="multipart/form-data">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.AccountNumber)

                    <div class="form-group">
                        <label for="">
                            Account Number
                        </label>
                        <span class="form-control input-sm" style="background-color:lightgrey">
                            @Model.AccountNumber
                        </span>
                    </div>

                    <div class="form-group">
                        @Html.Partial("_SalaryPayments", Model.SalaryPaymentModels)
                    </div>

                    <a href="@Url.Action("ViewAccount360DegreesPortfolio")" class="btn btn-primary btn-xs mr-2">
                        <i class="mdi mdi-refresh"></i>
                        Back
                    </a>
                    <button type="submit" class="btn btn-success btn-xs mr-2">
                        <i class="mdi mdi-file-document"></i>
                        Save
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


@section CustomScripts
{
    <script type="text/javascript">
        $(document).ready(function () {

        });
    </script>
}

