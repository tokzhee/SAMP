@model List<App.Web.Models.CRMSDetailsModel>

<table class="table table-striped table-hover table-responsive table-borderless table-sm">
    <thead>
        <tr>
            <th><strong>#</strong></th>
            <th><strong>Ref</strong></th>
            <th><strong>Credit Type</strong></th>
            <th><strong>Credit Limit</strong></th>
            <th><strong>Outstanding Amount</strong></th>
            <th><strong>Effective Date</strong></th>
            <th><strong>Tenor</strong></th>
            <th><strong>Expiry Date</strong></th>
            <th><strong>Granting Institution</strong></th>
            <th><strong>Performance Status</strong></th>
        </tr>
    </thead>
    <tbody>
        @for (var i = 0; i < Model.Count; i++)
        {
            <tr>
                <td> @(i + 1).</td>
                <td>@Html.DisplayFor(model => model[i].CRMSRefNumber)</td>
                <td>@Html.DisplayFor(model => model[i].CreditType)</td>
                <td>@Html.DisplayFor(model => model[i].CreditLimit) </td>
                <td>@Html.DisplayFor(model => model[i].OutstandingAmount)</td>
                <td>@Html.DisplayFor(model => model[i].EffectiveDate)</td>
                <td>@Html.DisplayFor(model => model[i].Tenor)</td>
                <td>@Html.DisplayFor(model => model[i].ExpiryDate)</td>
                <td>@Html.DisplayFor(model => model[i].GrantingInstitution)</td>
                <td>@Html.DisplayFor(model => model[i].PerformanceStatus)</td>
            </tr>
        }
    </tbody>

</table>