@model App.Web.ViewModels.ChangePasswordViewModel

@{
    ViewBag.Title = "Change Password";
}

<div class="row mb-4">
    <div class="col-12 d-flex align-items-center justify-content-between">
        <h5 class="page-title">
            Change Password
        </h5>
    </div>
</div>

<div class="row">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @if (TempData["Alert"] != null)
                {
                    @Html.Partial("_Alert", TempData["Alert"])
                }

                <form class="forms-sample" action="@Url.Action("ChangePassword")" method="post">
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.UrlQueryString)

                    <div class="form-group">
                        <label for="">
                            <i class="mdi mdi-lock-outline"></i>
                            Current Password
                        </label>
                        <input type="password" name="currentPassword" class="form-control input-sm" placeholder="Current Password here . . ." autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label for="">
                            <i class="mdi mdi-lock-outline"></i>
                            New Password
                        </label>
                        <input type="password" name="newPassword" class="form-control input-sm" placeholder="New Password here . . ." autocomplete="off" />
                    </div>
                    <div class="form-group">
                        <label for="">
                            <i class="mdi mdi-lock-outline"></i>
                            Confirm Password
                        </label>
                        <input type="password" name="confirmNewPassword" class="form-control input-sm" placeholder="Confirm Password here . . ." autocomplete="off" />
                    </div>
                    <button type="submit" class="btn btn-success btn-xs mr-2">
                        <i class="mdi mdi-file-document"></i>
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section CustomScripts
{
    <script type="text/javascript">

    </script>
}