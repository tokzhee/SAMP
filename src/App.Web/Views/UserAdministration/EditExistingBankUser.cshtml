@model App.Web.ViewModels.EditUsersViewModel

@{
    ViewBag.Title = "Edit Existing Bank User";
}

<div class="row mb-4">
    <div class="col-12 d-flex align-items-center justify-content-between">
        <h5 class="page-title">Edit @Model.UserModel.Fullname's Logon Role and Status</h5>
    </div>
</div>

<div class="row">
    <div class="col-md-8 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @if (TempData["Alert"] != null)
                {
                    @Html.Partial("_Alert", TempData["Alert"])
                }

                <form class="forms-sample" action="@Url.Action("EditExistingUser")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="form-group" id="divBranchUser">
                        <label for="">
                            Branch User? <small><i>Tick if user is a branch staff</i></small>
                        </label>
                        <br />
                        @Html.CheckBoxFor(model => model.UserModel.IsBranchUser)
                    </div>
                    <div class="form-group" id="divRole">
                        <label for="">
                            Role
                        </label>
                        @Html.DropDownListFor(model => model.UserModel.RoleId, Model.UserModel.RoleSelectListItems, new { @class = "form-control input-sm" })
                    </div>
                    <div class="form-group" id="divAccountStatus">
                        <label for="">
                            Account Status
                        </label>
                        @Html.DropDownListFor(model => model.UserModel.AccountStatusId, Model.UserModel.AccountStatusSelectListItems, new { @class = "form-control input-sm" })
                    </div>
                    <div class="form-group" id="divQueryString">
                        @Html.HiddenFor(model => model.UserModel.UrlQueryString)
                    </div>
                    <a href="@Url.Action("ViewUsers")" class="btn btn-primary btn-xs mr-2">
                        <i class="mdi mdi-refresh"></i>
                        Back
                    </a>
                    <button type="submit" class="btn btn-success btn-xs mr-2">
                        <i class="mdi mdi-file-document"></i>
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section CustomScripts
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#divQueryString").hide();
        });
    </script>
}