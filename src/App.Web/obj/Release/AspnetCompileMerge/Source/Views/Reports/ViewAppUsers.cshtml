@model App.Web.ViewModels.ViewAppUsersViewModel

@{
                /**/

                ViewBag.Title = "View App Users Report";
}

<div class="row mb-4">
    <div class="col-12 d-flex align-items-center justify-content-between">
        <h5 class="page-title">View App Users Report</h5>
    </div>
</div>
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                @if (TempData["Alert"] != null)
                {
                    @Html.Partial("_Alert", TempData["Alert"])
                }

                <form class="forms-sample" action="@Url.Action("ViewAppUsers")" method="post">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        @Html.Partial("_ReportSearchDate", Model.ReportSearchDateModel)
                    </div>
                    <div class="row">
                        <div class="col-md-3">
                            <button type="submit" class="btn btn-primary btn-xs mr-2">
                                <i class="mdi mdi-file-document"></i>
                                Submit
                            </button>
                        </div>
                    </div>
                </form>

                <br />
                @if (!string.IsNullOrEmpty(Convert.ToString(ViewBag.ReportAction)) && !string.IsNullOrEmpty(Convert.ToString(ViewBag.DateFrom)) && !string.IsNullOrEmpty(Convert.ToString(ViewBag.DateTo)))
                {
                    <iframe src="~/ReportViewer.aspx?action=@Convert.ToString(ViewBag.ReportAction)&from=@HttpUtility.UrlEncode(Convert.ToString(ViewBag.DateFrom))&to=@HttpUtility.UrlEncode(Convert.ToString(ViewBag.DateTo))" style="width:100%; " frameborder="0" scrolling="no" id="iframe" onload='javascript:resizeIframe(this);'></iframe>
                }

            </div>
        </div>
    </div>
</div>

@section CustomScripts
{
    <script type="text/javascript">
        function resizeIframe(obj) {
            obj.style.height = obj.contentWindow.document.body.scrollHeight + 'px';
        }
    </script>
}