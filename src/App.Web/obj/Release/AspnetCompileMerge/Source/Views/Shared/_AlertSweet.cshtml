@model App.Web.Models.AlertModel

@{
                /**/

                ViewBag.Title = "Message";
}

@if (Model != null)
{

    switch (Model.MessageCategory)
    {
        case 1:
            {
                <script type="text/javascript">
                sweetAlert("@Model.MessageSalutation", "@Model.Message", "info");
                </script>
                break;
            }
        case 2:
            {
                <script type="text/javascript">
                sweetAlert("@Model.MessageSalutation", "@Model.Message", "success");
                </script>
                break;
            }
        case 3:
            {
                <script type="text/javascript">
                sweetAlert("@Model.MessageSalutation", "@Model.Message", "warning");
                </script>
                break;
            }
        case 4:
            {
                <script type="text/javascript">
                sweetAlert("@Model.MessageSalutation", "@Model.Message", "error");
                </script>
                break;
            }
    }
}




