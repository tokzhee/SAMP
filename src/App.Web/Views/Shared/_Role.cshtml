@model App.Web.Models.RoleModel

<div class="form-group">
    <label for="RoleName">
        Role Name
    </label>
    @Html.TextBoxFor(model => model.RoleName, new {@class="form-control input-sm", placeholder="Type rolename here . . ." })
</div>
<div class="form-group" id="divActiveFlag">
    <label for="">
        Active?
    </label>
    <br />
    @Html.CheckBoxFor(model => model.ActiveFlag)
</div>
<div class="form-group" id="divQueryString">
    @Html.HiddenFor(model => model.UrlQueryString)
</div>